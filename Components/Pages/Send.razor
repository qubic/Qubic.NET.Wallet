@page "/send"
@implements IDisposable
@inject QubicBackendService Backend
@inject SeedSessionService Seed
@inject TickMonitorService TickMonitor
@inject TransactionTrackerService TxTracker
@inject QubicSettingsService Settings
@inject VaultService Vault
@inject BalanceService BalanceSvc

<h4>Send QU</h4>

@if (!Seed.HasSeed)
{
    <div class="alert alert-warning">Enter your seed in the top bar to enable sending.</div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Transfer</div>
                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label small">From</label>
                        <input class="form-control form-control-sm mono" value="@Seed.Identity" readonly />
                        @if (BalanceSvc.Balance != null)
                        {
                            <div class="small mt-1">Balance: <strong>@FormatQu(BalanceSvc.Balance.Value)</strong> QU</div>
                        }
                        else if (BalanceSvc.IsLoading)
                        {
                            <div class="small text-muted mt-1">Loading balance...</div>
                        }
                    </div>
                    <div class="mb-2">
                        <label class="form-label small">Destination (60-char identity)</label>
                        <AddressInput @bind-Value="_destination" Placeholder="BAAAAA..." />
                        @{ var destErr = IdentityValidation.Validate(_destination); }
                        @if (destErr != null)
                        {
                            <div class="small text-danger mt-1">@destErr</div>
                        }
                    </div>
                    <div class="mb-2">
                        <label class="form-label small">Amount (QU)</label>
                        <input type="number" class="form-control form-control-sm" min="1" @bind="_amount" />
                        @if (BalanceSvc.Balance != null)
                        {
                            <div class="d-flex gap-1 mt-1">
                                <button class="btn btn-outline-secondary btn-sm" @onclick="() => SetPercent(10)">10%</button>
                                <button class="btn btn-outline-secondary btn-sm" @onclick="() => SetPercent(25)">25%</button>
                                <button class="btn btn-outline-secondary btn-sm" @onclick="() => SetPercent(50)">50%</button>
                                <button class="btn btn-outline-secondary btn-sm" @onclick="() => SetPercent(100)">100%</button>
                            </div>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label small">Target Tick</label>
                        <div class="input-group input-group-sm">
                            <input type="number" class="form-control" @bind="_targetTick" />
                            @if (_targetTick == 0 && TickMonitor.IsConnected)
                            {
                                <span class="input-group-text bg-success text-white">
                                    Auto: @((TickMonitor.Tick + (uint)Settings.TickOffset).ToString("N0"))
                                </span>
                            }
                            else if (_targetTick > 0)
                            {
                                <button class="btn btn-outline-secondary" @onclick="() => _targetTick = 0">Auto</button>
                            }
                        </div>
                    </div>

                    @if (!_confirmed)
                    {
                        <button class="btn btn-primary" @onclick="Preview" disabled="@_loading">
                            @(_loading ? "Loading..." : "Preview Transaction")
                        </button>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <strong>Confirm:</strong> Send <strong>@FormatQu(_amount)</strong> QU
                            to <span class="mono">@_destination?[..20]...</span>
                            at tick <strong>@_resolvedTick.ToString("N0")</strong>
                            <div class="small text-muted mt-1">Network fee: 0 QU (included in amount)</div>
                        </div>
                        <button class="btn btn-success me-2" @onclick="SendTransaction" disabled="@_sending">
                            @(_sending ? "Sending..." : "Sign & Broadcast")
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="() => _confirmed = false">Cancel</button>
                    }

                    @if (_result != null)
                    {
                        <div class="alert alert-success mt-3">
                            Transaction broadcast! Tx ID: <TxHashDisplay Hash="@_result" ShowFull="true" />
                            <div class="mt-1"><a href="/history">View in Transaction History</a></div>
                        </div>
                        @if (Vault.IsUnlocked && !_dismissSaveContact && !string.IsNullOrEmpty(_destination) && !Vault.IsKnownAddress(_destination))
                        {
                            <div class="alert alert-info mt-2 py-2 d-flex align-items-center gap-2 flex-wrap">
                                <i class="bi bi-person-plus"></i>
                                <span class="small">Save <span class="mono">@_destination[..12]...</span> to address book?</span>
                                <input type="text" class="form-control form-control-sm" style="width:150px"
                                       @bind="_saveContactLabel" placeholder="Label" />
                                <button class="btn btn-sm btn-outline-primary" @onclick="SaveNewContact">Save</button>
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => _dismissSaveContact = true">
                                    <i class="bi bi-x"></i>
                                </button>
                            </div>
                        }
                    }
                    @if (_error != null)
                    {
                        <div class="alert alert-danger mt-2">@_error</div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string? _destination;
    private long _amount = 1;
    private uint _targetTick;
    private uint _resolvedTick;
    private bool _confirmed;
    private bool _loading;
    private bool _sending;
    private string? _result;
    private string? _error;
    private bool _disposed;

    protected override void OnInitialized()
    {
        TickMonitor.OnTickChanged += OnTickChanged;
        BalanceSvc.OnBalanceChanged += OnBalanceChanged;
    }

    private void OnTickChanged()
    {
        if (_disposed) return;
        InvokeAsync(() => { if (!_disposed && _targetTick == 0 && !_confirmed) StateHasChanged(); });
    }

    private void OnBalanceChanged()
    {
        if (_disposed) return;
        InvokeAsync(() => { if (!_disposed) StateHasChanged(); });
    }

    private void SetPercent(int pct)
    {
        var bal = BalanceSvc.Balance;
        if (bal == null || bal.Value <= 0) return;
        _amount = bal.Value * pct / 100;
        if (_amount <= 0) _amount = 1;
    }

    private async Task Preview()
    {
        _error = null; _result = null;
        if (string.IsNullOrWhiteSpace(_destination) || _destination.Trim().Length != 60)
        { _error = "Destination must be a 60-character identity."; return; }
        if (_amount <= 0) { _error = "Amount must be positive."; return; }
        if (BalanceSvc.Balance != null && _amount > BalanceSvc.Balance.Value)
        { _error = $"Insufficient balance ({FormatQu(BalanceSvc.Balance.Value)} QU)."; return; }

        _loading = true;
        try
        {
            await BalanceSvc.RefreshAsync();
            if (BalanceSvc.Balance != null && _amount > BalanceSvc.Balance.Value)
            { _error = $"Insufficient balance ({FormatQu(BalanceSvc.Balance.Value)} QU)."; return; }

            _resolvedTick = await TransactionHelper.ResolveTargetTickAsync(Backend, TickMonitor, Settings, _targetTick);
            _confirmed = true;
        }
        catch (Exception ex) { _error = ex.Message; }
        finally { _loading = false; }
    }

    private async Task SendTransaction()
    {
        _sending = true; _error = null;
        try
        {
            if (IdentityValidation.Validate(_destination) != null) { _error = "Invalid destination."; return; }
            _resolvedTick = await TransactionHelper.ResolveTargetTickAsync(Backend, TickMonitor, Settings, _targetTick);

            var dest = Qubic.Core.Entities.QubicIdentity.FromIdentity(_destination!.Trim());
            var tx = Seed.CreateAndSignTransfer(dest, _amount, _resolvedTick);
            _result = await TransactionHelper.BroadcastAndTrackAsync(
                Backend, TxTracker, Seed, tx,
                dest.ToString(), _amount, _resolvedTick,
                $"Send {FormatQu(_amount)} QU");
            _confirmed = false;
            BalanceSvc.RequestRefresh();
        }
        catch (Exception ex) { _error = ex.Message; }
        finally { _sending = false; }
    }

    // Save to address book
    private string? _saveContactLabel;
    private bool _dismissSaveContact;

    private void SaveNewContact()
    {
        if (string.IsNullOrWhiteSpace(_saveContactLabel) || string.IsNullOrEmpty(_destination)) return;
        try { Vault.AddContact(_saveContactLabel, _destination.Trim()); } catch { }
        _saveContactLabel = null;
        _dismissSaveContact = true;
    }

    private static string FormatQu(long amount) => amount.ToString("N0");

    public void Dispose()
    {
        _disposed = true;
        TickMonitor.OnTickChanged -= OnTickChanged;
        BalanceSvc.OnBalanceChanged -= OnBalanceChanged;
    }
}
